<?xml version="1.0"?>
<run>
    <tool>
        <title>Strain Compensation Thickness Calculator</title>
        <about>Strain compensation thickness calculator for quantum dots or quantum wells in a wide range of material systems.</about>
        <command>octave --silent --eval infile='@driver',path('@tool/../bin',path),main</command>
        <!--
            Copyright (C) 2014-2015 Stephen J. Polly and Alex J. Grede
            GPL v3, See LICENSE for details
            File is part of straincomp (https://nanohub.org/resources/straincomp)
        -->
    </tool>
    <input>
        <group id="Sub">
            <about>
                <label>Substrate Material</label>
                <description>The material of the substrate--the material that is strain neutral in this system.</description>
                <layout>vertical</layout>
            </about>
            <group id="group_a">
                <about>
                    <label>Group III</label>
                    <layout>horizontal</layout>
                </about>
                <number id="Al">
                    <about>
                        <label>Al</label>
                        <description>Al composition</description>
                    </about>
                    <min>0</min>
                    <max>1</max>
                    <default>0.0</default>
                </number>
                <number id="Ga">
                    <about>
                        <label>Ga</label>
                        <description>Ga composition</description>
                    </about>
                    <min>0</min>
                    <max>1</max>
                    <default>1.0</default>
                </number>
                <number id="In">
                    <about>
                        <label>In</label>
                        <description>In composition</description>
                    </about>
                    <min>0</min>
                    <max>1</max>
                    <default>0.0</default>
                </number>
            </group>
            <group id="group_b">
                <about>
                    <label>Group V</label>
                    <layout>horizontal</layout>
                </about>
                <number id="P">
                    <about>
                        <label>P</label>
                        <description>P composition</description>
                    </about>
                    <min>0</min>
                    <max>1</max>
                    <default>0.0</default>
                </number>
                <number id="As">
                    <about>
                        <label>As</label>
                        <description>As composition</description>
                    </about>
                    <min>0</min>
                    <max>1</max>
                    <default>1.0</default>
                </number>
                <number id="Sb">
                    <about>
                        <label>Sb</label>
                        <description>Sb composition</description>
                    </about>
                    <min>0</min>
                    <max>1</max>
                    <default>0.0</default>
                </number>
            </group>
        </group>
        <group id="QD">
            <about>
                <label>Quantum Dot Material</label>
                <description>The material of the quantum dot (or quantum well)--the material that is in compressive strain to the substrate.</description>
                <layout>vertical</layout>
            </about>
            <group id="group_a">
                <about>
                    <label>Group III</label>
                    <layout>horizontal</layout>
                </about>
                <number id="Al">
                    <about>
                        <label>Al</label>
                        <description>Al composition</description>
                    </about>
                    <min>0</min>
                    <max>1</max>
                    <default>0.0</default>
                </number>
                <number id="Ga">
                    <about>
                        <label>Ga</label>
                        <description>Ga composition</description>
                    </about>
                    <min>0</min>
                    <max>1</max>
                    <default>0.0</default>
                </number>
                <number id="In">
                    <about>
                        <label>In</label>
                        <description>In composition</description>
                    </about>
                    <min>0</min>
                    <max>1</max>
                    <default>1.0</default>
                </number>
            </group>
            <group id="group_b">
                <about>
                    <label>Group V</label>
                    <layout>horizontal</layout>
                </about>
                <number id="P">
                    <about>
                        <label>P</label>
                        <description>P composition</description>
                    </about>
                    <min>0</min>
                    <max>1</max>
                    <default>0.0</default>
                </number>
                <number id="As">
                    <about>
                        <label>As</label>
                        <description>As composition</description>
                    </about>
                    <min>0</min>
                    <max>1</max>
                    <default>1.0</default>
                </number>
                <number id="Sb">
                    <about>
                        <label>Sb</label>
                        <description>Sb composition</description>
                    </about>
                    <min>0</min>
                    <max>1</max>
                    <default>0.0</default>
                </number>
            </group>
        </group>
        <group id="SC">
            <about>
                <label>Strain Compensation Material</label>
                <description>The material of the strain compensation material--the material that is in tensile strain to the substrate.</description>
                <layout>vertical</layout>
            </about>
            <group id="group_a">
                <about>
                    <label>Group III</label>
                    <layout>horizontal</layout>
                </about>
                <number id="Al">
                    <about>
                        <label>Al</label>
                        <description>Al composition</description>
                    </about>
                    <min>0</min>
                    <max>1</max>
                    <default>0.0</default>
                </number>
                <number id="Ga">
                    <about>
                        <label>Ga</label>
                        <description>Ga composition</description>
                    </about>
                    <min>0</min>
                    <max>1</max>
                    <default>1.0</default>
                </number>
                <number id="In">
                    <about>
                        <label>In</label>
                        <description>In composition</description>
                    </about>
                    <min>0</min>
                    <max>1</max>
                    <default>0.0</default>
                </number>
            </group>
            <group id="group_b">
                <about>
                    <label>Group V</label>
                    <layout>horizontal</layout>
                </about>
                <number id="P">
                    <about>
                        <label>P</label>
                        <description>P composition</description>
                    </about>
                    <min>0</min>
                    <max>1</max>
                    <default>1.0</default>
                </number>
                <number id="As">
                    <about>
                        <label>As</label>
                        <description>As composition</description>
                    </about>
                    <min>0</min>
                    <max>1</max>
                    <default>0.0</default>
                </number>
                <number id="Sb">
                    <about>
                        <label>Sb</label>
                        <description>Sb composition</description>
                    </about>
                    <min>0</min>
                    <max>1</max>
                    <default>0.0</default>
                </number>
            </group>
        </group>
        <number id="QDDia">
            <about>
                <label>QD Diameter</label>
                <description>Diameter of the QDs in the system.</description>
            </about>
            <default>25</default>
            <units>nm</units>
            <min>0.01</min>
            <max>1000</max>
        </number>
        <number id="QDH">
            <about>
                <label>QD Height (or QW Thickness)</label>
                <description>Height of the QDs in the system, or if only concerned about quantum wells, the thickness of the QW layer.</description>
            </about>
            <default>2</default>
            <units>nm</units>
            <min>0.01</min>
            <max>1000</max>
        </number>
        <number id="QDDen">
            <about>
                <label>QD Density</label>
                <description>Density of QDs in the system.</description>
            </about>
            <default>5e10</default>
            <units>cm-2</units>
            <min>1e5</min>
            <max>1e15</max>
        </number>
        <number id="WL">
            <about>
                <label>Wetting Layer Thickness</label>
                <description>Thickness of the QD wetting layer.</description>
            </about>
            <default>0.3</default>
            <units>nm</units>
            <min>0.01</min>
            <max>1000</max>
        </number>
    </input>
    <output>
        <log>
        </log>
    </output>
</run>
